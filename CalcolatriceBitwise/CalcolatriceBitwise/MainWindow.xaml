            <TextBox.Resources>

            </TextBox.Resources>
        </TextBox>
        <Label Content="Risultato" HorizontalAlignment="Left" Margin="253,44,0,0" VerticalAlignment="Top" FontFamily="Cascadia Code Light" Grid.Column="1"/>
        <Label Content="Seconda stringa" HorizontalAlignment="Left" Margin="131,209,0,0" VerticalAlignment="Top" FontFamily="Cascadia Code Light" Height="26"/>
        <Label Content="Comparatori" HorizontalAlignment="Left" Margin="57,44,0,0" VerticalAlignment="Top" FontFamily="Cascadia Code Light" Grid.Column="1"/>
        <Button x:Name="btnReset" Content="RESET" HorizontalAlignment="Left" Margin="191,343,0,0" VerticalAlignment="Top" Height="37" Width="198" Click="btnReset_Click" FontFamily="Cascadia Code" FontSize="14" Background="#FF86A789" Grid.Column="1"/>
        <Label Content="Matteo Angiolillo 3H 2024-02-20" HorizontalAlignment="Left" Margin="310,385,0,0" VerticalAlignment="Top" FontFamily="Consolas" Grid.ColumnSpan="2" FontStyle="Italic" Foreground="#FF616161"/>
    </Grid>
</Window>
