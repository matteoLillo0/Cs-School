        <Button x:Name="btnOr" Content="OR" HorizontalAlignment="Left" Margin="30,163,0,0" VerticalAlignment="Top" Height="54" Width="142" Click="btnOr_Click" FontFamily="Cascadia Code" FontSize="14" Background="#FF86A789" Grid.Column="1"/>
        <Button x:Name="btnXor" Content="XOR" HorizontalAlignment="Left" Margin="30,270,0,0" VerticalAlignment="Top" Height="54" Width="142" Click="btnXor_Click" FontFamily="Cascadia Code" FontSize="14" Background="#FF86A789" Grid.Column="1"></Button>
