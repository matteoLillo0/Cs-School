            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.197"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.329"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="btnZero_Second" Content="0" HorizontalAlignment="Left" Margin="83,346,0,0" VerticalAlignment="Top" Height="48" Width="102" Click="btnZero_Second_Click" FontFamily="Cascadia Code" FontSize="14" Background="#FF86A789"/>
