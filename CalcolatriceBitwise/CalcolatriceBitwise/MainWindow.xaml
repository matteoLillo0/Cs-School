            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.214"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.329"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="btnShiftRight_First" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="244,104,0,0" VerticalAlignment="Top" Height="36" Width="50" Click="btnShiftRight_First_Click" FontFamily="Cascadia Code" FontSize="14" BorderBrush="#FF86A789" Background="#FFABD2AF"/>
        <Button x:Name="btnShiftLeft_First" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="83,104,0,0" VerticalAlignment="Top" Height="36" Width="50" Click="btnShiftLeft_First_Click" FontFamily="Cascadia Code" FontSize="14" Background="#FFABD2AF" BorderBrush="#FFABADB3"/>
