        <TextBox x:Name="txtBinario_First" HorizontalAlignment="Left" Margin="83,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="211" Height="35" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" BorderBrush="#FFABADB3" Background="White" FontSize="14">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.214"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.329"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="btnZero_First" Content="0" HorizontalAlignment="Left" Margin="83,145,0,0" VerticalAlignment="Top" Height="54" Width="102" Click="btnZero_First_Click" FontSize="14" FontFamily="Cascadia Code" Background="#FF86A789"/>
