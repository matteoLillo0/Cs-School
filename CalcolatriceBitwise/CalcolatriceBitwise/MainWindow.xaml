        <Button x:Name="btnShiftRight_Second" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="244,307,0,0" VerticalAlignment="Top" Height="33" Width="50" Click="btnShiftRight_Second_Click" FontFamily="Cascadia Code" FontSize="14" Background="#FFABD2AF" BorderBrush="#FFABADB3"/>
        <Button x:Name="btnShiftLeft_Second" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="83,307,0,0" VerticalAlignment="Top" Height="33" Width="50" Click="btnShiftLeft_Second_Click" FontFamily="Cascadia Code" FontSize="14" Background="#FFABD2AF" BorderBrush="#FFABADB3"/>
